<% if flash[:notice] %>
   <div class="flash">
      <%= flash[:notice] %>
   </div>
<% end %>

<h2>Books</h2>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
         <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to("show","/books/#{book.id}") %></td>
            <td><%= link_to("edit","/books/#{book.id}/edit") %></td>
            <td><%= link_to "destroy",book_path(book), method: :delete,"data-confirm" => "Are you sure?" %></td>
         </tr>
        <% end %>
    </tbody>
</table>

<h2>New book</h2>

<%= form_with model: @book, url:'/books' ,local: true do |f| %>

  <% if @book.errors.any? %>
  <ul>
    <%= pluralize(@book.errors.count, "error") %>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  </ul>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <p><%= f.submit 'Create Book' %></P>
<% end %>

